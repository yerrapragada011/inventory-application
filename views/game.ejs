<li><strong><%= game.title %></strong></li>
<p><strong>Genres:</strong></p>
<ul>
  <% game.genres.forEach(genre => { %>
  <li><%= genre %></li>
  <% }) %>
</ul>
<p><strong>Developers:</strong></p>
<ul>
  <% game.developers.forEach(developer => { %>
  <li><%= developer %></li>
  <% }) %>
</ul>
<a href="/gameDetail/<%= game.id %>">Open</a>
<form action="/<%= game.id %>/delete" method="POST" style="display: inline">
  <button
    type="submit"
    onclick="return confirm('Are you sure you want to delete this user?');"
  >
    Delete
  </button>
</form>
